<!-- PARAMETER ENTITIES FOR ATTRIBUTE VALUES -->
<!-- ============================================================= -->
<!-- TYPES OF ANSWERS -->
<!--
  Used to name the type of question or
  question set.
-->
<grammar xmlns="http://relaxng.org/ns/structure/1.0" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
  <define name="answer-types">
    <choice>
      <value>essay</value>
      <value>fill-in-the-blank</value>
      <value>multi-select</value>
      <value>multiple-choice</value>
      <value>short-answer</value>
      <value>true-false</value>
    </choice>
  </define>
  <!-- ============================================================= -->
  <!-- PARAMETER ENTITIES FOR ATTRIBUTE LISTS -->
  <!-- ============================================================= -->
  <!-- QUESTION ATTRIBUTES -->
  <!-- Attributes for the <question> element -->
  <define name="question-atts">
    <ref name="jats-common-atts"/>
    <optional>
      <attribute name="question-response-type">
        <choice>
          <ref name="answer-types"/>
        </choice>
      </attribute>
    </optional>
    <optional>
      <attribute name="content-type"/>
    </optional>
    <optional>
      <attribute name="specific-use"/>
    </optional>
    <optional>
      <attribute name="xml:lang">
        <data type="NMTOKEN"/>
      </attribute>
    </optional>
  </define>
  <!-- QUESTION PREAMBLE ATTRIBUTES -->
  <!--
    Attributes for the <question-preamble> 
    element
  -->
  <define name="question-preamble-atts">
    <ref name="jats-common-atts"/>
    <optional>
      <attribute name="content-type"/>
    </optional>
    <optional>
      <attribute name="specific-use"/>
    </optional>
    <optional>
      <attribute name="xml:lang">
        <data type="NMTOKEN"/>
      </attribute>
    </optional>
  </define>
  <!-- QUESTION WRAP ATTRIBUTES -->
  <!-- Attributes for the <question-wrap> element -->
  <define name="question-wrap-atts">
    <ref name="jats-common-atts"/>
    <optional>
      <attribute name="audience"/>
    </optional>
    <optional>
      <attribute name="content-type"/>
    </optional>
    <optional>
      <attribute name="specific-use"/>
    </optional>
    <optional>
      <attribute name="xml:lang">
        <data type="NMTOKEN"/>
      </attribute>
    </optional>
  </define>
  <!-- QUESTION WRAP GROUP ATTRIBUTES -->
  <!--
    Attributes for the <question-wrap-group> 
    element
  -->
  <define name="question-wrap-group-atts">
    <ref name="jats-common-atts"/>
    <optional>
      <attribute name="audience"/>
    </optional>
    <optional>
      <attribute name="content-type"/>
    </optional>
    <optional>
      <attribute name="specific-use"/>
    </optional>
    <optional>
      <attribute name="xml:lang">
        <data type="NMTOKEN"/>
      </attribute>
    </optional>
  </define>
  <!-- ANSWER ATTRIBUTES -->
  <!-- Attributes for the <answer> element -->
  <define name="answer-atts">
    <ref name="jats-common-atts"/>
    <attribute name="pointer-to-question">
      <data type="IDREFS"/>
    </attribute>
    <optional>
      <attribute name="content-type"/>
    </optional>
    <optional>
      <attribute name="specific-use"/>
    </optional>
    <optional>
      <attribute name="xml:lang">
        <data type="NMTOKEN"/>
      </attribute>
    </optional>
  </define>
  <!-- ANSWER SET ATTRIBUTES -->
  <!-- Attributes for the <answer-set> element -->
  <define name="answer-set-atts">
    <ref name="jats-common-atts"/>
    <optional>
      <attribute name="content-type"/>
    </optional>
    <optional>
      <attribute name="specific-use"/>
    </optional>
    <optional>
      <attribute name="xml:lang">
        <data type="NMTOKEN"/>
      </attribute>
    </optional>
  </define>
  <!-- EXPLANATION ATTRIBUTES -->
  <!-- Attributes for the <explanation> element -->
  <define name="explanation-atts">
    <ref name="jats-common-atts"/>
    <attribute name="pointer-to-explained">
      <data type="IDREFS"/>
    </attribute>
    <optional>
      <attribute name="content-type"/>
    </optional>
    <optional>
      <attribute name="specific-use"/>
    </optional>
    <optional>
      <attribute name="xml:lang">
        <data type="NMTOKEN"/>
      </attribute>
    </optional>
  </define>
  <!-- OPTION ATTRIBUTES -->
  <!-- Attributes for the <option> element -->
  <define name="option-atts">
    <ref name="jats-common-atts"/>
    <optional>
      <attribute name="correct">
        <choice>
          <value>yes</value>
          <value>no</value>
        </choice>
      </attribute>
    </optional>
    <optional>
      <attribute name="content-type"/>
    </optional>
    <optional>
      <attribute name="specific-use"/>
    </optional>
    <optional>
      <attribute name="xml:lang">
        <data type="NMTOKEN"/>
      </attribute>
    </optional>
  </define>
  <!-- ============================================================= -->
  <!-- QUESTION ELEMENTS -->
  <!-- ============================================================= -->
  <!-- QUESTION MODEL -->
  <!-- Content model for the <question> element. -->
  <define name="question-model">
    <zeroOrMore>
      <ref name="id.class"/>
    </zeroOrMore>
    <optional>
      <ref name="sec-meta"/>
    </optional>
    <optional>
      <ref name="label"/>
    </optional>
    <optional>
      <ref name="title"/>
    </optional>
    <zeroOrMore>
      <ref name="subtitle"/>
    </zeroOrMore>
    <zeroOrMore>
      <ref name="alt-title"/>
    </zeroOrMore>
    <choice>
      <oneOrMore>
        <ref name="sec-level"/>
      </oneOrMore>
      <group>
        <oneOrMore>
          <ref name="para-level"/>
        </oneOrMore>
        <zeroOrMore>
          <ref name="sec-level"/>
        </zeroOrMore>
      </group>
    </choice>
    <zeroOrMore>
      <ref name="option.class"/>
    </zeroOrMore>
    <zeroOrMore>
      <ref name="sec-back-matter-mix"/>
    </zeroOrMore>
  </define>
  <!-- QUESTION -->
  <!--
    A question (request for an answer) used in
    the text or as part of a quiz, exam, etc.
    Details at:
    http://jats.nlm.nih.gov/extensions/bits/2.1/index.html?elem=question
  -->
  <define name="question">
    <element name="question">
      <ref name="question-attlist"/>
      <ref name="question-model"/>
    </element>
  </define>
  <define name="question-attlist" combine="interleave">
    <ref name="question-atts"/>
  </define>
  <!-- QUESTION WRAP MODEL -->
  <!--
    Content model for the <question-wrap>
    element.
  -->
  <define name="question-wrap-model">
    <zeroOrMore>
      <ref name="id.class"/>
    </zeroOrMore>
    <ref name="question"/>
    <optional>
      <choice>
        <ref name="answer"/>
        <ref name="answer-set"/>
      </choice>
    </optional>
    <zeroOrMore>
      <ref name="explanation"/>
    </zeroOrMore>
  </define>
  <!-- QUESTION WRAP -->
  <!--
    Used to model a Question/Answer scheme. These
    questions may be used, for example, for the
    Continuing Medical Education articles in a
    book of articles. The model allows for
    simple questions followed by their
    corresponding answers or for a multiple
    choice setup, where questions are followed
    by multiple alternative answers (<option>s), 
    along with the correct answer and an 
    explanation.
    Note: This is not the model for a full
    quiz, test, exam, etc., but such a model
    could be built using these components for
    the question/answers.
    Details at:
    http://jats.nlm.nih.gov/extensions/bits/2.1/index.html?elem=question-wrap
  -->
  <define name="question-wrap">
    <element name="question-wrap">
      <ref name="question-wrap-attlist"/>
      <ref name="question-wrap-model"/>
    </element>
  </define>
  <define name="question-wrap-attlist" combine="interleave">
    <ref name="question-wrap-atts"/>
  </define>
  <!-- QUESTION WRAP GROUP MODEL -->
  <!--
    Content model for the <question-wrap-group>
    element.
  -->
  <define name="question-wrap-group-model">
    <zeroOrMore>
      <ref name="id.class"/>
    </zeroOrMore>
    <optional>
      <ref name="label"/>
    </optional>
    <optional>
      <ref name="title"/>
    </optional>
    <zeroOrMore>
      <ref name="subtitle"/>
    </zeroOrMore>
    <zeroOrMore>
      <ref name="alt-title"/>
    </zeroOrMore>
    <optional>
      <ref name="question-preamble"/>
    </optional>
    <oneOrMore>
      <ref name="question-wrap.class"/>
    </oneOrMore>
  </define>
  <!-- QUESTION WRAP GROUP -->
  <!--
    A container element used to hold a group of
    <question-wrap> elements, for example, when
    all the questions share a common preamble 
    (setup).
    Note: This is not the model for a full
    quiz, test, exam, etc., but such a model
    could be built using these components for
    the question/answers.
    Details at:
    http://jats.nlm.nih.gov/extensions/bits/2.1/index.html?elem=question-wrap-group
  -->
  <define name="question-wrap-group">
    <element name="question-wrap-group">
      <ref name="question-wrap-group-attlist"/>
      <ref name="question-wrap-group-model"/>
    </element>
  </define>
  <define name="question-wrap-group-attlist" combine="interleave">
    <ref name="question-wrap-group-atts"/>
  </define>
  <!-- QUESTION PREAMBLE MODEL -->
  <!--
    Content model for the <question-preamble>
    element.
  -->
  <define name="question-preamble-model">
    <zeroOrMore>
      <ref name="id.class"/>
    </zeroOrMore>
    <optional>
      <ref name="label"/>
    </optional>
    <optional>
      <ref name="title"/>
    </optional>
    <zeroOrMore>
      <ref name="subtitle"/>
    </zeroOrMore>
    <zeroOrMore>
      <ref name="alt-title"/>
    </zeroOrMore>
    <zeroOrMore>
      <ref name="para-level"/>
    </zeroOrMore>
    <zeroOrMore>
      <ref name="sec.class"/>
    </zeroOrMore>
  </define>
  <!-- QUESTION PREAMBLE -->
  <!--
    A container element used setup/
    preamble information when the setup is shared 
    by several questions, for example, a diagram 
    is shown and the questions are similar to 
    "What is angle a?".
    Remarks: The preamble information is part of
    a <question-wrap-group> that contains the 
    preamble/setup (<question-preamble>) and 
    several questions (tagged as <question-wrap>s).
    Details at:
    http://jats.nlm.nih.gov/extensions/bits/2.1/index.html?elem=question-preamble
  -->
  <define name="question-preamble">
    <element name="question-preamble">
      <ref name="question-preamble-attlist"/>
      <ref name="question-preamble-model"/>
    </element>
  </define>
  <define name="question-preamble-attlist" combine="interleave">
    <ref name="question-preamble-atts"/>
  </define>
  <!-- ============================================================= -->
  <!-- ANSWER/EXPLANATION ELEMENTS -->
  <!-- ============================================================= -->
  <!-- ANSWER MODEL -->
  <!-- Content model for the <answer> element. -->
  <define name="answer-model">
    <zeroOrMore>
      <ref name="id.class"/>
    </zeroOrMore>
    <optional>
      <ref name="label"/>
    </optional>
    <optional>
      <ref name="title"/>
    </optional>
    <zeroOrMore>
      <ref name="subtitle"/>
    </zeroOrMore>
    <zeroOrMore>
      <ref name="alt-title"/>
    </zeroOrMore>
    <choice>
      <oneOrMore>
        <ref name="sec-level"/>
      </oneOrMore>
      <group>
        <oneOrMore>
          <ref name="answer-para-level"/>
        </oneOrMore>
        <zeroOrMore>
          <ref name="sec-level"/>
        </zeroOrMore>
      </group>
    </choice>
    <zeroOrMore>
      <ref name="sec-back-matter-mix"/>
    </zeroOrMore>
    <zeroOrMore>
      <ref name="explanation"/>
    </zeroOrMore>
  </define>
  <!-- ANSWER ELEMENTS -->
  <!--
    An answer to a question
    Details at:
    http://jats.nlm.nih.gov/extensions/bits/2.1/index.html?elem=answer
  -->
  <define name="answer">
    <element name="answer">
      <ref name="answer-attlist"/>
      <ref name="answer-model"/>
    </element>
  </define>
  <define name="answer-attlist" combine="interleave">
    <ref name="answer-atts"/>
  </define>
  <!-- ANSWER SET MODEL -->
  <!--                     Content model for the <answer-set> element. -->
  <define name="answer-set-model">
    <zeroOrMore>
      <ref name="id.class"/>
    </zeroOrMore>
    <optional>
      <ref name="label"/>
    </optional>
    <optional>
      <ref name="title"/>
    </optional>
    <zeroOrMore>
      <ref name="subtitle"/>
    </zeroOrMore>
    <zeroOrMore>
      <ref name="alt-title"/>
    </zeroOrMore>
    <oneOrMore>
      <choice>
        <ref name="answer"/>
        <ref name="just-para.class"/>
        <ref name="explanation"/>
      </choice>
    </oneOrMore>
  </define>
  <!-- ANSWER SET -->
  <!--
    A series of answers, typically in response
    to a question.
    Details at:
    http://jats.nlm.nih.gov/extensions/bits/2.1/index.html?elem=answer-set
  -->
  <define name="answer-set">
    <element name="answer-set">
      <ref name="answer-set-attlist"/>
      <ref name="answer-set-model"/>
    </element>
  </define>
  <define name="answer-set-attlist" combine="interleave">
    <ref name="answer-set-atts"/>
  </define>
  <!-- EXPLANATION MODEL -->
  <!--                     Content model for the <answer-set> element. -->
  <define name="explanation-model">
    <zeroOrMore>
      <ref name="id.class"/>
    </zeroOrMore>
    <optional>
      <ref name="label"/>
    </optional>
    <optional>
      <ref name="title"/>
    </optional>
    <zeroOrMore>
      <ref name="subtitle"/>
    </zeroOrMore>
    <zeroOrMore>
      <ref name="alt-title"/>
    </zeroOrMore>
    <choice>
      <oneOrMore>
        <ref name="sec-level"/>
      </oneOrMore>
      <group>
        <oneOrMore>
          <ref name="answer-para-level"/>
        </oneOrMore>
        <zeroOrMore>
          <ref name="sec-level"/>
        </zeroOrMore>
      </group>
    </choice>
    <zeroOrMore>
      <ref name="sec-back-matter-mix"/>
    </zeroOrMore>
  </define>
  <!-- EXPLANATION -->
  <!--
    A description of a question/answer or of just
    an answer or answer set. The explanation
    may describe, for example, why this
    particular answer is incorrect, or where in
    the text the material for this question
    can be found, et al.
    Details at:
    http://jats.nlm.nih.gov/extensions/bits/2.1/index.html?elem=explanation
  -->
  <define name="explanation">
    <element name="explanation">
      <ref name="explanation-attlist"/>
      <ref name="explanation-model"/>
    </element>
  </define>
  <define name="explanation-attlist" combine="interleave">
    <ref name="explanation-atts"/>
  </define>
  <!-- OPTION MODEL -->
  <!-- Content model for the <option> element. -->
  <define name="option-model">
    <zeroOrMore>
      <ref name="id.class"/>
    </zeroOrMore>
    <optional>
      <ref name="label"/>
    </optional>
    <optional>
      <ref name="title"/>
    </optional>
    <zeroOrMore>
      <ref name="subtitle"/>
    </zeroOrMore>
    <zeroOrMore>
      <ref name="alt-title"/>
    </zeroOrMore>
    <choice>
      <oneOrMore>
        <ref name="sec-level"/>
      </oneOrMore>
      <group>
        <oneOrMore>
          <ref name="answer-para-level"/>
        </oneOrMore>
        <zeroOrMore>
          <ref name="sec-level"/>
        </zeroOrMore>
      </group>
    </choice>
    <zeroOrMore>
      <ref name="sec-back-matter-mix"/>
    </zeroOrMore>
    <zeroOrMore>
      <ref name="explanation"/>
    </zeroOrMore>
  </define>
  <!-- OPTION ELEMENTS -->
  <!--
    One of the possible answer-choices for a 
    multiple-choice question. An attribute can be
    used to identify options which are correct.
    Details at:
    http://jats.nlm.nih.gov/extensions/bits/2.1/index.html?elem=option
  -->
  <define name="option">
    <element name="option">
      <ref name="option-attlist"/>
      <ref name="option-model"/>
    </element>
  </define>
  <define name="option-attlist" combine="interleave">
    <ref name="option-atts"/>
  </define>
</grammar>
